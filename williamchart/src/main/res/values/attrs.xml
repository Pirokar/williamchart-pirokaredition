<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChartAttrs">

        <!-- Axis -->
        <attr name="chart_axis">
            <enum name="none" value="0" />
            <enum name="x" value="1" />
            <enum name="y" value="2" />
            <enum name="xy" value="3" />
        </attr>
        <!-- Labels -->
        <attr name="chart_labelsColors" format="reference" />
        <attr name="chart_labelsSize" format="dimension" />
        <attr name="chart_labelsFont" format="reference" />
        <!-- Grid -->
        <attr name="chart_grid" format="boolean" />
        <attr name="chart_gridColor" format="color" />
        <attr name="chart_gridStrokeWidth" format="dimension" />

    </declare-styleable>

    <declare-styleable name="BarChartAttrs">
        <attr name="chart_spacing" format="dimension" />
        <attr name="chart_barsColors" format="reference" />
        <attr name="chart_barsBackgroundColors" format="reference" />
        <attr name="chart_barsRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LineChartAttrs">
        <attr name="chart_lineColor" format="color" />
        <attr name="chart_smoothLine" format="boolean" />
        <attr name="chart_lineThickness" format="dimension" />
        <attr name="chart_pointsDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="DonutChartAttrs">
        <attr name="chart_donutThickness" format="dimension" />
        <attr name="chart_donutBackgroundColor" format="color" />
        <attr name="chart_donutRoundCorners" format="boolean" />
        <attr name="chart_donutTotal" format="float" />
    </declare-styleable>
</resources>

